<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="jdbc.properties"/>

    <typeAliases>
        <typeAlias type="com.shed.domain.Member" alias="member"/>
        <typeAlias type="com.shed.domain.Order" alias="order"/>
        <typeAlias type="com.shed.domain.User" alias="user"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--使用MyBatis的注解开发时,无需加载Mapper.xml文件-->
    <!--但需要加载映射关系-->
    <mappers>
        <package name="com.shed.mapper"/>
    </mappers>

</configuration>